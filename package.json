{
  "name": "vite-template-redux",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "imports": {
    "#src/*": [
      "./src/*"
    ]
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test": "test:unit && test:e2e",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,css}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@mantine/core": "^7.15.1",
    "@mantine/hooks": "^7.15.1",
    "@reduxjs/toolkit": "^2.5.0",
    "@tanstack/react-router": "^1.89.0",
    "@tanstack/router-devtools": "^1.89.0",
    "autoprefixer": "^10.4.20",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-lazy-load-image-component": "^1.6.2",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@mojojoejo/vite-plugin-purgecss": "^1.1.0",
    "@playwright/test": "^1.49.1",
    "@tanstack/router-plugin": "^1.87.13",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-perfectionist": "^4.3.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rollup-plugin-critical": "^1.0.14",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.9.0"
}
